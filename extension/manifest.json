{
  "manifest_version": 3,
  "name": "Focus Tutor",
  "version": "0.1.0",
  "action": {
    "default_title": "Focus Tutor",
    "default_popup": "ui/popup/popup.html"
  },
  "icons": {
    "48": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background/serviceWorker.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "content/pageExtractor.js",
        "content/screenshotCapture.js",
        "content/contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "cookies", "activeTab", "tabs", "alarms", "notifications", "identity"],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5174/*",
    "http://127.0.0.1:5174/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "CHROME_WEB_STORE_WILL_PROVIDE_THIS",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
